layout: layouts/base.njk
---

<div class="hero">
    <h1 class="hero__heading">
        Tiny tips, tricks & best practices<br>
        for front-end development
    </h1>
</div>

<div class="container">
    {% set lastPost = collections.posts[collections.posts.length - 1] %}
