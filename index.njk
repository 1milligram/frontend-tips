            </div>
            <div class="home__placeholder-content home__placeholder-content--tip">
                <placeholder-lines size="10" />
            </div>
            <div class="home__placeholder-content home__placeholder-content--trick">
                <placeholder-lines size="10" />
            </div>
        </div>
    </div>

    <div class="post__next">
        #{{ collections.posts.length }} <a href="{{ lastPost.url }}">{{ lastPost.data.title }}</a> →
    </div>
</div>
