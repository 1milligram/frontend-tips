                <path d="M15 3.5L17 3.5" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"></path>
                <path d="M16 4.5L16 2.5" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"></path>
            </svg>
            {% else %}
            <svg xmlns="http://www.w3.org/2000/svg" version="1.1" viewBox="0 0 24 24" width="24" height="24">
                <path d="M19.5,16.065h0a1.5,1.5,0,0,1,0,3h-1a1.5,1.5,0,0,1,0,3H12c-4,0-3-2-11-2v-9H4a7.949,7.949,0,0,0,7.5-8c0-1.581,3-1.781,3,1.219a31.593,31.593,0,0,1-1,5.781h8a1.5,1.5,0,0,1,0,3h-1a1.5,1.5,0,0,1,0,3h-1" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round">
            </svg>
            {% endif %}
        </div>
    </div>
    {% if topics %}
    <div class="post__topics">Topics: {{ topics }}</div>
    {% endif %}
    {{ content | safe }}
