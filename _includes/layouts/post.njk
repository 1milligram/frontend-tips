            <path d="M20.499 4.015L18.378 6.136" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"></path>
            <path d="M0.514 12.5L3.514 12.5" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"></path>
            <path d="M23.514 12.5L20.514 12.5" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"></path>
            <path d="M18.014,12.5a6,6,0,1,0-9.429,4.917,1,1,0,0,1,.429.821V19a.5.5,0,0,0,.5.5h5a.5.5,0,0,0,.5-.5v-.763a1,1,0,0,1,.429-.821A5.98,5.98,0,0,0,18.014,12.5Z" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"></path>
