---
layout: layouts/base.njk
permalink: "/{{ page.fileSlug }}.html"
---

{% if prevPost %}
<div class="post__prev">
    ← #{{ index }} <a href="{{ prevPost.url }}">{{ prevPost.data.title }}</a>
</div>
{% endif %}

<div class="post__content">
    <div class="post__index">#{{ index + 1 }}</div>
    <h1 class="post__title">{{ title }}</h1>
    <div class="post__category post__category--{{ category }}">
        <div class="post__icon">
            {% if category == "tip" %}
            <svg xmlns="http://www.w3.org/2000/svg" version="1.1" viewBox="0 0 24 24" width="24" height="24">
                <path d="M13.514 23.5L10.514 23.5" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"></path>
                <path d="M14.514 21.5L9.514 21.5" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"></path>
                <path d="M12.014 0.5L12.014 3.5" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"></path>
                <path d="M3.528 4.015L5.65 6.136" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"></path>
                <path d="M20.499 4.015L18.378 6.136" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"></path>
                <path d="M0.514 12.5L3.514 12.5" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"></path>
