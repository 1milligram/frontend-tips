                <path d="M0.5 9.5L2.5 9.5" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"></path>
                <path d="M9.5 0.5L9.5 2.5" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"></path>
                <path d="M2.5 1.5L2.5 3.5" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"></path>
